# Extend the official PostgreSQL image with dotenvx support
FROM postgres:16-bookworm

# Install dotenvx for decrypting .env.local at container startup
RUN apt-get update && \
    apt-get install -y curl && \
    curl -sfS https://dotenvx.sh/install.sh | sh && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

