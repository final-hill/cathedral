{
    "name": "@final-hill/cathedral",
    "version": "0.34.0",
    "description": "Requirements management system",
    "keywords": [],
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/final-hill/cathedral.git"
    },
    "bugs": {
        "url": "https://github.com/final-hill/cathedral/issues"
    },
    "homepage": "https://final-hill.com/cathedral",
    "author": "Michael L Haufe <michael.haufe@final-hill.com> (https://final-hill.com)",
    "license": "AGPL-3.0-only",
    "type": "module",
    "engines": {
        "node": ">=24.8.0"
    },
    "scripts": {
        "analyze-build": "nuxt analyze",
        "build": "nuxt build",
        "preview": "dotenvx run -f .env.local -- nuxt preview",
        "generate-pwa-assets": "pwa-assets-generator",
        "//generate": "nuxt generate",
        "dev": "dotenvx run -f .env.local -- nuxt dev --no-fork --inspect",
        "postinstall": "nuxt prepare",
        "typecheck": "nuxt typecheck",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "orm-debug:local": "dotenvx run -f .env.local -- mikro-orm-esm debug",
        "orm-debug:production": "dotenvx run -f .env.production -- mikro-orm-esm debug",
        "orm-create-db:local": "dotenvx run -f .env.local -- mikro-orm-esm database:create",
        "orm-create-migration:local": "dotenvx run -f .env.local -- mikro-orm-esm migration:create",
        "orm-list-pending-migrations:local": "dotenvx run -f .env.local -- mikro-orm-esm migration:pending",
        "orm-list-pending-migrations:production": "dotenvx run -f .env.production -- mikro-orm-esm migration:pending",
        "orm-list-executed-migrations:local": "dotenvx run -f .env.local -- mikro-orm-esm migration:list",
        "orm-list-executed-migrations:production": "dotenvx run -f .env.production -- mikro-orm-esm migration:list",
        "orm-run-pending-migrations:local": "dotenvx run -f .env.local -- mikro-orm-esm migration:up",
        "orm-run-pending-migrations:production": "dotenvx run -f .env.production -- mikro-orm-esm migration:up",
        "orm-rollback-migration:local": "dotenvx run -f .env.local -- mikro-orm-esm migration:down",
        "orm-rollback-migration:production": "dotenvx run -f .env.production -- mikro-orm-esm migration:down",
        "test": "dotenvx run -f .env.test -- vitest run",
        "test:watch": "dotenvx run -f .env.test -- vitest"
    },
    "dependencies": {
        "@azure/monitor-opentelemetry": "^1.14.0",
        "@azure/msal-node": "^3.8.0",
        "@azure/openai": "^2.0.0",
        "@dotenvx/dotenvx": "^1.35.3",
        "@mikro-orm/core": "^6.5.8",
        "@mikro-orm/postgresql": "^6.5.8",
        "@mikro-orm/reflection": "^6.5.8",
        "@mikro-orm/seeder": "^6.5.8",
        "@nuxt/eslint": "^1.9.0",
        "@nuxt/ui": "^4.0.1",
        "@slack/web-api": "^7.11.0",
        "@types/jsdom": "^27.0.0",
        "@vite-pwa/nuxt": "^1.0.5",
        "eslint": "^9.37.0",
        "jsonwebtoken": "^9.0.2",
        "mermaid": "^11.12.0",
        "node-cache": "^5.1.2",
        "nuxt": "^4.1.3",
        "nuxt-auth-utils": "^0.5.23",
        "nuxt-security": "^2.4.0",
        "openai": "^6.3.0",
        "uuid": "^13.0.0",
        "vue": "^3.5.22",
        "vue-router": "^4.6.0",
        "zod": "^3.25.67",
        "zod-to-json-schema": "^3.24.6"
    },
    "devDependencies": {
        "@iconify-json/lucide": "^1.2.69",
        "@mikro-orm/cli": "^6.5.8",
        "@mikro-orm/migrations": "^6.5.8",
        "@nuxt/test-utils": "^3.19.2",
        "@playwright/test": "^1.56.0",
        "@testing-library/vue": "^8.1.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/microsoft-graph": "^2.40.1",
        "@types/node": "^24.7.2",
        "@types/uuid": "^10.0.0",
        "@vite-pwa/assets-generator": "^1.0.2",
        "@vue/test-utils": "^2.4.6",
        "happy-dom": "^18.0.1",
        "playwright-core": "^1.56.0",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.6",
        "typescript": "^5.9.3",
        "vite-plugin-devtools-json": "^1.0.0",
        "vitest": "^3.2.4",
        "vue-tsc": "^3.1.1"
    }
}
